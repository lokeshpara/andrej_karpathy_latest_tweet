{
  "manifest_version": 3,
  "name": "Karpathy's Latest",
  "version": "1.0",
  "description": "Shows Andrej Karpathy's latest Twitter/X activity",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://hn.algolia.com/*",
    "https://hacker-news.firebaseio.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 